<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/secondaryButtonSmallCornerRadius" />
            <stroke android:width="@dimen/secondaryButtonStrokeWidth" android:color="@color/textSecondary" />
            <padding android:bottom="@dimen/secondaryButtonSmallVerticalPadding" android:left="@dimen/secondaryButtonSmallHorizontalPadding" android:right="@dimen/secondaryButtonSmallHorizontalPadding" android:top="@dimen/secondaryButtonSmallVerticalPadding" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/secondaryButtonSmallCornerRadius" />
            <stroke android:width="@dimen/secondaryButtonStrokeWidth" android:color="@color/colorPrimary" />
            <solid android:color="@color/colorPrimary" />
            <padding android:bottom="@dimen/secondaryButtonSmallVerticalPadding" android:left="@dimen/secondaryButtonSmallHorizontalPadding" android:right="@dimen/secondaryButtonSmallHorizontalPadding" android:top="@dimen/secondaryButtonSmallVerticalPadding" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/secondaryButtonSmallCornerRadius" />
            <stroke android:width="@dimen/secondaryButtonStrokeWidth" android:color="@color/colorPrimary" />
            <padding android:bottom="@dimen/secondaryButtonSmallVerticalPadding" android:left="@dimen/secondaryButtonSmallHorizontalPadding" android:right="@dimen/secondaryButtonSmallHorizontalPadding" android:top="@dimen/secondaryButtonSmallVerticalPadding" />
        </shape>
    </item>
</selector>