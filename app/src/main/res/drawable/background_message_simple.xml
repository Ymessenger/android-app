<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="@dimen/gapSmall">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundGray" />
            <corners
                android:topLeftRadius="@dimen/message_cloud_radius"
                android:topRightRadius="@dimen/message_cloud_radius"
                android:bottomRightRadius="@dimen/message_cloud_radius" />
        </shape>
    </item>
    <item android:gravity="bottom|start">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="130%"
            android:pivotY="30%">
            <shape android:shape="rectangle">
                <size
                    android:width="@dimen/gapMedium"
                    android:height="@dimen/gapMedium" />
                <solid android:color="@color/backgroundGray" />
            </shape>
        </rotate>
    </item>

</layer-list>